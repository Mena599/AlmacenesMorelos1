<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-radius: 20; -fx-background-color: #FCFCEC;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.almasenesmorelos1.AdminSedeController">

    <!-- HEADER -->
    <AnchorPane prefHeight="80.0" prefWidth="1000.0" AnchorPane.topAnchor="10.0">
        <!-- Logo -->
        <ImageView fx:id="imgLogo" fitHeight="68.0" fitWidth="91.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0">
            <image>
                <Image url="@../../../img/Logo.png" />
            </image>
        </ImageView>

        <!-- Título centrado -->
        <Label fx:id="lblAdminSede" alignment="CENTER" layoutY="4.0" prefHeight="72.0" prefWidth="335.0" style="-fx-background-color: #607B8B; -fx-background-radius: 20;" text="Admins Sedes" textFill="WHITE" AnchorPane.leftAnchor="350.0">
            <font>
                <Font name="Corbel Bold" size="48.0" />
            </font>
        </Label>

        <!-- Icono usuario -->
        <ImageView fx:id="imgUser" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="80.0">
            <image>
                <Image url="@../../../img/user.png" />
            </image>
        </ImageView>

        <!-- Icono logout -->
        <ImageView fx:id="imgLongOut" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" onMouseClicked="#handleLogoutIconAction" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="20.0">
            <image>
                <Image url="@../../../img/log-out.png" />
            </image>
        </ImageView>
    </AnchorPane>

    <!-- Botón Añadir -->
    <Button fx:id="btnAgregar" layoutX="860.0" layoutY="100.0" mnemonicParsing="false" onAction="#abrirFormularioAdminSede" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #304850; -fx-background-radius: 10;" text="+ Añadir" textFill="WHITE">
        <font>
            <Font name="Arial" size="14.0" />
        </font>
    </Button>

    <!-- FlowPane para tarjetas -->
    <FlowPane fx:id="TargetasFlow" hgap="20" layoutX="37.0" layoutY="160.0" prefHeight="400.0" prefWidth="943.0" vgap="20" />
</AnchorPane>
