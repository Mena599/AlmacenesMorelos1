<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-radius: 20; -fx-background-color: #FCFCEC;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.almasenesmorelos1.AlmacenesController">
    <children>
        <AnchorPane prefHeight="80.0" prefWidth="1000.0" AnchorPane.topAnchor="10.0">
            <!-- Logo -->
            <ImageView fx:id="imgLogo" fitHeight="68.0" fitWidth="91.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0">
                <image>
                    <Image url="@../../../img/Logo.png" />
                </image>
            </ImageView>

            <!-- Título centrado -->
            <Label fx:id="lblClientes" alignment="CENTER" layoutY="4.0" prefHeight="72.0" prefWidth="335.0" style="-fx-background-color: #607B8B; -fx-background-radius: 20;" text="Almacenes" textFill="WHITE" AnchorPane.leftAnchor="350.0">
                <font>
                    <Font name="Corbel Bold" size="48.0" />
                </font>
            </Label>

            <!-- Icono usuario -->
            <ImageView fx:id="imgUser" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="80.0">
                <image>
                    <Image url="@../../../img/user.png" />
                </image>
            </ImageView>

            <!-- Icono logout -->
            <ImageView fx:id="imgLongOu" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" onMouseClicked="#handleLogoutIconAction" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="20.0">
                <image>
                    <Image url="@../../../img/log-out.png" />
                </image>
            </ImageView>
        </AnchorPane>

        <HBox prefHeight="52.0" prefWidth="174.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="110.0">
            <children>
                <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#abrirFormularioAlmacen" prefHeight="25.0" prefWidth="73.0" style="-fx-background-color: #304850; -fx-background-radius: 10;" text="+  Añadir" textFill="WHITE">
                    <HBox.margin>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="15.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <FlowPane fx:id="TargetasFlow" prefHeight="377.0" prefWidth="893.0" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="180.0" />
    </children>
</AnchorPane>
