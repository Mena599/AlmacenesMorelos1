<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-radius: 20; -fx-background-color: #FCFCEC;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.almasenesmorelos1.ClientesController">

    <!-- HEADER -->
    <AnchorPane prefHeight="80.0" prefWidth="1000.0" AnchorPane.topAnchor="10.0">
        <!-- Logo -->
        <ImageView fx:id="imgLogo" fitHeight="68.0" fitWidth="91.0"
                   layoutY="6.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.leftAnchor="20.0">
            <image>
                <Image url="@../../../img/Logo.png" />
            </image>
        </ImageView>

        <!-- Título centrado -->
        <Label fx:id="lblClientes" alignment="CENTER"
               layoutY="4.0" prefHeight="72.0" prefWidth="335.0"
               style="-fx-background-color: #607B8B; -fx-background-radius: 20;"
               text="Clientes" textFill="WHITE" AnchorPane.leftAnchor="350.0">
            <font>
                <Font name="Corbel Bold" size="48.0"/>
            </font>
        </Label>

        <!-- Icono usuario -->
        <ImageView fx:id="imgUser" fitHeight="32.0" fitWidth="34.0"
                   layoutY="24.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.rightAnchor="80.0">
            <image>
                <Image url="@../../../img/user.png" />
            </image>
        </ImageView>

        <!-- Icono logout -->
        <ImageView fx:id="imgLongOu" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" onMouseClicked="#handleLogoutIconAction" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="20.0">
            <image>
                <Image url="@../../../img/log-out.png" />
            </image>
        </ImageView>
    </AnchorPane>

    <!-- Tabla de clientes -->
    <TableView fx:id="tablaClientes" layoutX="30.0" layoutY="120.0"
               prefHeight="450.0" prefWidth="940.0"
               AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">

        <columns>
            <TableColumn fx:id="colIdAlmacen" text="ID Almacén" prefWidth="100"/>
            <TableColumn fx:id="colNombre" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="colCorreo" text="Correo" prefWidth="150"/>
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
            <TableColumn fx:id="colEstatus" text="Estatus" prefWidth="100"/>
            <TableColumn fx:id="colFechaAdq" text="Fecha Adq." prefWidth="150"/>
            <TableColumn fx:id="colFechaExp" text="Fecha Exp." prefWidth="150"/>
        </columns>
    </TableView>
</AnchorPane>
