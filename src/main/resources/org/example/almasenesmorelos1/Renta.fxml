<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #FCFCEC;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.almasenesmorelos1.RentaController">
    <children>
        <!-- HEADER -->
        <AnchorPane prefHeight="80.0" prefWidth="1000.0" AnchorPane.topAnchor="10.0">
            <!-- Logo -->
            <ImageView fx:id="imgLogo" fitHeight="68.0" fitWidth="91.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0">
                <image>
                    <Image url="@../../../img/Logo.png" />
                </image>
            </ImageView>

            <!-- TÃ­tulo centrado -->
            <Label fx:id="lblAdminSede" alignment="CENTER" layoutY="4.0" prefHeight="72.0" prefWidth="335.0" style="-fx-background-color: #607B8B; -fx-background-radius: 20;" text="Renta" textFill="WHITE" AnchorPane.leftAnchor="350.0">
                <font>
                    <Font name="Corbel Bold" size="48.0" />
                </font>
            </Label>

            <!-- Icono usuario -->
            <ImageView fx:id="imgUser" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="80.0">
                <image>
                    <Image url="@../../../img/user.png" />
                </image>
            </ImageView>

            <!-- Icono logout -->
            <ImageView fx:id="imgLongOut" fitHeight="32.0" fitWidth="34.0" layoutY="24.0" onMouseClicked="#handleLogoutIconAction" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="20.0">
                <image>
                    <Image url="@../../../img/log-out.png" />
                </image>
            </ImageView>
        </AnchorPane>
        <VBox layoutX="30.0" layoutY="191.0" prefHeight="252.0" prefWidth="100.0" spacing="10.0">
            <children>
                <Button fx:id="btnInicio" mnemonicParsing="false" onAction="#OnInicioAction" prefHeight="72.0" prefWidth="125.0" style="-fx-background-color: #A1B3BE; -fx-background-radius: 10;" text="Inicio" />
                <Button fx:id="btnCompra" mnemonicParsing="false" onAction="#OnCompraAction" prefHeight="75.0" prefWidth="125.0" style="-fx-background-color: #A1B3BE; -fx-background-radius: 10;" text="Compra" />
                <Button fx:id="btnRenta" mnemonicParsing="false" onAction="#OnRentaAction" prefHeight="75.0" prefWidth="125.0" style="-fx-background-color: #A1B3BE; -fx-background-radius: 10;" text="Renta" />
            </children>
        </VBox>
        <FlowPane fx:id="flowpaneRenta" layoutX="165.0" layoutY="159.0" prefHeight="417.0" prefWidth="780.0" />
    </children>
</AnchorPane>
