                    </VBox.margin>
                </ImageView>

                <HBox minWidth="100.0" prefHeight="37.0" prefWidth="182.0" spacing="40.0">
                    <children>
                        <Label text="tamaño" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <!-- valor dinámico -->
                        <Label fx:id="lblTamano" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets top="12.0" />
                    </padding>
                </HBox>

                <HBox prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                    <children>
                        <Label text="Ubicasion" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <!-- valor dinámico -->
                        <Label fx:id="lblUbicacion" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets top="12.0" />
                    </padding>
                </HBox>

                <HBox prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                    <children>
                        <Label text="Precio" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <!-- valor dinámico -->
                        <Label fx:id="lblPrecio" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets top="12.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <!-- botón con id y handler -->
        <Button fx:id="btnRentar" layoutX="158.0" layoutY="310.0" mnemonicParsing="false" onAction="#onRentar" text="Rentar" />
    </children>
</AnchorPane>
